#!/bin/bash
CLJ_JAR=clojure-1.6.0.jar
if [ -a "$CLOJURE_HOME/jline-0.9.94.jar" ]; then
    echo "Clojure REPL (jline)"
    java -cp $CLOJURE_HOME/jline-0.9.94.jar:$CLOJURE_HOME/$CLJ_JAR jline.ConsoleRunner clojure.main
else
    echo "Clojure REPL (native)"
    java -cp $CLOJURE_HOME/$CLJ_JAR clojure.main
fi
