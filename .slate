# Slate config
# original: https://github.com/jigish/slate
# fork    : https://github.com/mattr-/slate

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config orderScreensLeftToRight false
config resizePercentOf screenSize
config undoOps grid,layout,move,resize,push,nudge
# config switchShowTitles true

# monitor aliases
alias mon-laptop 1920x1200
alias mon-monoprice 2560x1440

# Undo
bind z:cmd;ctrl    undo

# Grid
bind g:cmd;ctrl    grid padding:5
bind esc:ctrl      grid padding:5

# Resize Bindings
# Enlarge: top-right-bottom-left
bind 1:alt;cmd;ctrl     resize +0 +10% bottom-left
bind 2:alt;cmd;ctrl     resize +10% +0 top-left
bind 3:alt;cmd;ctrl     resize +0 +10% top-left
bind 4:alt;cmd;ctrl     resize +10% +0 top-right
# Shrink: top-right-bottom-left
bind 5:alt;cmd;ctrl     resize +0 -10% bottom-left
bind 6:alt;cmd;ctrl     resize -10% +0 top-left
bind 7:alt;cmd;ctrl     resize +0 -10% top-left 
bind 8:alt;cmd;ctrl     resize -10% +0 top-right

# Push Bindings
bind [:cmd;ctrl     push left
bind [:alt;cmd;ctrl push bottom
bind ]:cmd;ctrl     push right
bind ]:alt;cmd;ctrl push top
bind f:cmd;ctrl     move screenOriginX;screenOriginY screenSizeX;screenSizeY 
bind j:alt;cmd;ctrl push left  bar-resize:screenSizeX/3
bind j:cmd;ctrl     push left  bar-resize:screenSizeX/2
bind k:cmd;ctrl     push right bar-resize:screenSizeX/2
bind k:alt;cmd;ctrl push right bar-resize:screenSizeX/3
# Maximize vertically
bind v:alt;cmd;ctrl move windowTopLeftX;screenOriginY windowSizeX;screenSizeY
# Center window
bind c:cmd;ctrl     move screenOriginX+(screenSizeX-windowSizeX)/2;screenOriginY+(screenSizeY-windowSizeY)/2 windowSizeX;windowSizeY
bind c:alt;cmd;ctrl move screenOriginX+screenSizeX/3;0 screenSizeX/3;screenSizeY

# Nudge Bindings
bind right:alt;cmd;ctrl nudge +25 +0
bind left:alt;cmd;ctrl  nudge -25 +0
bind up:alt;cmd;ctrl    nudge +0  -25
bind down:alt;cmd;ctrl  nudge +0  +25

# Throw Bindings
bind 0:cmd;ctrl     throw 0
bind 9:cmd;ctrl     throw 1

# Work messenger layout
alias 2-top-l move screenOriginX;screenOriginY  screenSizeX/3;screenSizeY/2  ${mon-monoprice}
alias 2-bot-l move screenOriginX;screenOriginY+screenSizeY/2  screenSizeX/3;screenSizeY/2  ${mon-monoprice}
alias 2-top-c move screenOriginX+screenSizeX/3;screenOriginY  screenSizeX/3;screenSizeY/2  ${mon-monoprice}
alias 2-top-r move screenOriginX+2*screenSizeX/3;screenOriginY  screenSizeX/3;screenSizeY/2  ${mon-monoprice}

layout workMsg 'Slack' ${2-top-l}
layout workMsg 'Textual 5':REPEAT ${2-top-l}
layout workMsg 'Salesforce Chatter' ${2-top-l}
layout workMsg 'HipChat' ${2-bot-l}
layout workMsg 'The Hit List' ${2-top-c}
layout workMsg 'TaskPaper' ${2-top-r}

bind w:alt;cmd;ctrl layout workMsg